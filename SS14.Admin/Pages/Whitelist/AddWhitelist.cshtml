@page
@model SS14.Admin.Pages.Whitelist.AddWhitelist

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Add whitelist"];
}

<partial name="Shared/StatusMessageAlert" />

<form method="post" class="container">
    <div class="mb-3 form-label">
        <label asp-for="Input.NameOrUid" class="form-label">
            @Localizer["Name / User ID to whitelist"]
        </label>
        <input asp-for="Input.NameOrUid" type="text" class="form-control"></input>
    </div>

    <input type="submit" value="@(Localizer["Add"])" class="btn btn-primary">
</form>
