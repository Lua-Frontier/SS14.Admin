@using Content.Server.Database
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SS14.Admin.Helpers
@model SS14.Admin.Pages.Tables.ConnectionsTableModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<partial name="Tables/Pagination" for="Pagination"/>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model!.SortState, "name", Localizer["User Name"].Value))"/>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model.SortState, "uid", Localizer["User ID"].Value))"/>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model.SortState, "time", Localizer["Time"].Value))"/>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model.SortState, "addr", Localizer["IP Address"].Value))"/>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model.SortState, "hwid", Localizer["HWID"].Value))"/>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model.SortState, "denied", Localizer["Status"].Value))"/>
        <th>
            @Localizer["Server"]
        </th>
        <th>
            @Localizer["Trust Score"]
        </th>
        <partial name="Tables/SortTabHeader" model="@(new SortTabHeaderModel(Model.SortState, "hits", Localizer["Bans Hit"].Value))"/>
    </tr>
    </thead>
    <tbody>
    @foreach (var (log, banHits, player) in Model.Pagination.List.PaginatedItems)
    {
        <tr>
            <td>
                @if (player == null)
                {
                    <strong>@log.UserName</strong>
                }
                else
                {
                    <a asp-page="/Players/Info" asp-route-userId="@player.UserId">
                        <strong>@log.UserName</strong>
                    </a>
                }
                <br/>
            </td>
            <td class="font-monospace">@log.UserId</td>
            <td>@log.Time.ToString("yyyy-MM-dd HH:mm:ss")</td>
            @if (User.IsInRole(Constants.PIIRole))
            {
                <td class="font-monospace constrained-150">@log.Address</td>
                <td class="font-monospace constrained-150">@(log.HWId?.ToImmutable())</td>
            }
            else
            {
                <td class="font-monospace constrained-150">@Localizer["Hidden"]</td>
                <td class="font-monospace constrained-150">@Localizer["Hidden"]</td>
            }
            <td>
                @switch (log.Denied)
                {
                    case ConnectionDenyReason.Ban:
                        <strong>@Localizer["Denied: Banned"]</strong>
                        break;
                    case ConnectionDenyReason.Whitelist:
                        <strong>@Localizer["Denied: Whitelist"]</strong>
                        break;
                    case ConnectionDenyReason.Full:
                        <strong>@Localizer["Denied: Server Full"]</strong>
                        break;
                    case ConnectionDenyReason.Panic:
                        <strong>@Localizer["Denied: Panic Bunker"]</strong>
                        break;
                    case ConnectionDenyReason.BabyJail:
                        <strong>@Localizer["Denied: Baby Jail"]</strong>
                        break;
                    case ConnectionDenyReason.IPChecks:
                        <strong>@Localizer["Denied: IP Checks"]</strong>
                        break;
                    case ConnectionDenyReason.NoHwid:
                        <strong>@Localizer["Denied: No HWID"]</strong>
                        break;
                    case null:
                        <span>@Localizer["Accepted"]</span>
                        break;
                }
            </td>
            <td>
                @log.Server.Name
            </td>
            <td>@log.Trust</td>
            <td>
                @if (banHits != 0)
                {
                    var plural = banHits > 1;
                    <a asp-page="/Connections/Hits" class="btn btn-secondary" asp-route-connection="@log.Id">@banHits @(plural ? Localizer["hits"] : Localizer["hit"])</a>
                }
                else
                {
                    <a href="#" class="btn btn-secondary disabled">0 @Localizer["hits"]</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="Tables/Pagination" for="Pagination"/>
