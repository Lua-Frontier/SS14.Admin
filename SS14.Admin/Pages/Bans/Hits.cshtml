@page "{ban}"
@using SS14.Admin.Helpers
@using SS14.Admin.Pages.Tables
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SS14.Admin.Pages.Bans.Hits

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Ban Hits"];
}

<div class="container">
    <h1>@Localizer["Ban hits for ban"] @Model.Ban.Ban.Id</h1>

    <dl class="row">
        <dt class="col-sm-2">@Localizer["Name:"]</dt>
        <dd class="col-sm-10">@Model.Ban.Player?.LastSeenUserName</dd>
        <dt class="col-sm-2">@Localizer["User ID:"]</dt>
        <dd class="col-sm-10 font-monospace">@Model.Ban.Ban.PlayerUserId</dd>
        @if (User.IsInRole(Constants.PIIRole))
        {
            <dt class="col-sm-2">@Localizer["IP:"]</dt>
            <dd class="col-sm-10 font-monospace">@Model.Ban.Ban.Address?.FormatCidr()</dd>
            <dt class="col-sm-2">@Localizer["HWID:"]</dt>
            <dd class="col-sm-10 font-monospace">@BanHelper.FormatHwid(Model.Ban.Ban.HWId)</dd>
        }
        <dt class="col-sm-2">@Localizer["Time:"]</dt>
        <dd class="col-sm-10">@Model.Ban.Ban.BanTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        <dt class="col-sm-2">@Localizer["Expires:"]</dt>
        <dd class="col-sm-10">
            @(Model.Ban.Ban.ExpirationTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "PERMANENT")
            @if (Model.Ban.Ban.Unban is { } unbanned)
            {
                <br>
                <text><strong>@Localizer["Unbanned:"]</strong> @unbanned.UnbanTime.ToString("yyyy-MM-dd HH:mm:ss") @Localizer["by"] @Model.Ban.UnbanAdmin?.LastSeenUserName</text>
            }
            else if (Model.Ban.Ban.ExpirationTime < DateTime.UtcNow)
            {
                <br>
                <strong>@Localizer["Expired"]</strong>
            }
        </dd>
        <dt class="col-sm-2">@Localizer["Banning admin:"]</dt>
        <dd class="col-sm-10">@Model.Ban.Admin?.LastSeenUserName</dd>
        @if (BanHelper.IsBanActive(Model.Ban.Ban) && User.IsInRole("BAN"))
        {
            <dt class="col-sm-2">@Localizer["Actions:"]</dt>
            <dd class="col-sm-10">
                <form asp-page-handler="Unban" asp-page="Index">
                    <input type="hidden" name="Id" value="@Model.Ban.Ban.Id">
                    <input type="submit" class="btn btn-secondary" value="@(Localizer["Unban"])">
                </form>
            </dd>
        }
    </dl>
</div>


<form asp-all-route-data="@Model.AllRouteData.ShallowClone()" method="get" class="container">
    @FormHiddenRoutes.Make(Model.AllRouteData, "search")
    <div class="form-group row">
        <label class="col-md-3" for="searchBar">@Localizer["Search:"]</label>
        <input type="text" id="searchBar" name="search" value="@Model.CurrentFilter" class="form-control form-control-sm col-md-7"/>
        <input type="submit" value="@(Localizer["Search"])" class="btn btn-primary col-md-1 btn-sm"/>
        <a class="btn btn-danger btn-sm col-md-1" asp-page="./Index">@Localizer["Clear"]</a>
    </div>
</form>

<partial name="Tables/ConnectionsTable" model="@(new ConnectionsTableModel(Model.SortState, Model.Pagination))"/>
