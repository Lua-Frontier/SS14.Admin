@using SS14.Admin.SignIn
@inject SignInManager SignInManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var signIn = SignInManager.GetSignInData(User);
    var darkMode = Context.Request.Cookies["darkMode"] == "true";
    var darkModeClass = darkMode ? "dark" : "light";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="@darkModeClass">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SS14.Admin</title>
    <link rel="icon" href="~/favicon.ico" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/logo.png" class="header-logo" alt="SS14.Admin logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-sm-row-reverse">
                @if (signIn == null)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">@Localizer["Login"]</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link">@Localizer["Hello {0}", signIn.Name]</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">@Localizer["Logout"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Settings/Index">@Localizer["Settings"]</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @Localizer["Language"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="SetLanguage" asp-route-culture="en" asp-route-returnUrl="@($"{Context.Request.PathBase}{Context.Request.Path}{Context.Request.QueryString}")">English</a></li>
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="SetLanguage" asp-route-culture="ru" asp-route-returnUrl="@($"{Context.Request.PathBase}{Context.Request.Path}{Context.Request.QueryString}")">Русский</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Bans/Index">@Localizer["Bans"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/RoleBans/Index">@Localizer["Role bans"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Players/Index">@Localizer["Players"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Connections/Index">@Localizer["Connections"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Logs/Index">@Localizer["Logs"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Characters/Index">@Localizer["Characters"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Whitelist/Index">@Localizer["Whitelist"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@*
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - SS14.Admin
    </div>
</footer>
*@

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/litepicker/litepicker.min.js"></script>
<script src="~/lib/popper/popper.min.js"></script>
<script src="~/lib/luxon.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
